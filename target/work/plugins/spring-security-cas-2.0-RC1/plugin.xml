<plugin name='spring-security-cas' version='2.0-RC1' grailsVersion='2.0 &gt; *'>
  <author>Burt Beckwith</author>
  <authorEmail>burt@burtbeckwith.com</authorEmail>
  <title>Jasig CAS support for the Spring Security plugin.</title>
  <description>Jasig CAS support for the Spring Security plugin.</description>
  <documentation>http://grails-plugins.github.io/grails-spring-security-cas/</documentation>
  <type>SpringSecurityCasGrailsPlugin</type>
  <resources>
    <resource>DefaultCasSecurityConfig</resource>
  </resources>
  <repositories>
    <repository name='grailsCentral' url='http://plugins.grails.org' />
    <repository name='http://repo.grails.org/grails/plugins' url='http://repo.grails.org/grails/plugins/' />
    <repository name='http://repo.grails.org/grails/core' url='http://repo.grails.org/grails/core/' />
    <repository name='grailsCore' url='http://svn.codehaus.org/grails/trunk/grails-plugins' />
    <repository name='mavenCentral' url='http://repo1.maven.org/maven2/' />
    <repository name='http://repo.spring.io/milestone' url='http://repo.spring.io/milestone/' />
  </repositories>
  <dependencies>
    <compile>
      <dependency group='org.jasig.cas.client' name='cas-client-core' version='3.2.1' />
      <dependency group='org.springframework.security' name='spring-security-cas' version='3.2.0.RC1' />
    </compile>
  </dependencies>
  <plugins>
    <compile>
      <plugin group='org.grails.plugins' name='spring-security-core' version='2.0-RC2' />
    </compile>
  </plugins>
  <runtimePluginRequirements />
  <behavior />
</plugin>